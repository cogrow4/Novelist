{
  "$schema": "https://json.schemastore.org/package",
  "name": "novelist",
  "version": "1.0.0",
  "description": "Novelist - A distraction-free writing application",
  "main": "electron/main.js",
  "type": "module",
  "license": "Unlicense",
  "author": "CoGrow",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "package": "electron-builder",
    "build:all": "electron-builder -m dmg -w msi -l AppImage",
    "build:mac": "electron-builder -m dmg",
    "build:win": "electron-builder -w msi",
    "build:win:arm64": "electron-builder -w nsis --arm64",
    "build:linux": "electron-builder -l AppImage",
    "build:linux:arm64": "electron-builder -l AppImage --arm64",
    "build:linux:armv7l": "electron-builder -l AppImage --armv7l",
    "build:linux:deb": "electron-builder -l deb",
    "build:linux:rpm": "electron-builder -l rpm",
    "icons:icns": "node scripts/gen-icns.js",
    "icons:ico": "node scripts/gen-ico.js",
    "icons:all": "npm run icons:icns && npm run icons:ico",
    "release:check": "node scripts/check-release.js",
    "release:prepare": "node scripts/prepare-release.js"
  },
  "build": {
    "appId": "org.novelist.app",
    "productName": "Novelist",
    "files": [
      "electron/**",
      "renderer/**",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "msi": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-${arch}-Setup.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Office",
      "maintainer": "CoGrow <contact@cogrow.org>",
      "desktop": {
        "Name": "Novelist",
        "Comment": "A distraction-free writing application",
        "Categories": "Office;WordProcessor;"
      },
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "fs-extra": "^11.2.0",
    "marked": "^12.0.2",
    "nanoid": "^4.0.2",
    "quill": "^1.3.7",
    "simple-git": "^3.23.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "electron": "^29.3.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.33.4"
  }
}
